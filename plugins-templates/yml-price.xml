        <offers>
            <% platesData.map((plate)=> { %>
                <offer id="<%= plate.id %>">
                    <name><%= plate.title %></name>
                    <url>https://www.dromotron.ru/<%= plate.linkPath %></url>
                    <price><%= plate.price %></price>
                    <currencyId>RUR</currencyId>
                    <categoryId><%= plate.categoryNumId %></categoryId>
                    <picture>https://www.dromotron.ru/api-images/plates/<%= plate.image_name %></picture>
                    <description>
                        <![CDATA[
                            Пластина для теплообменника <%= plate.teploobmennik %> из стали <%= plate.steel_mark_aisi %> (<%= plate.steel_mark %>), 
                            толщиой <%= plate.thinkness %> мм.  Рисунок <%= plate.pattern %> (угол излома <%= plate.pattern==='H' ? '>90°' : '<90°' %>), 
                            расположение отверстий <%= plate.holes %><%= plate.holes==='1004' || plate.holes==='0230' ? ' (поворотная)' : '' %><%= plate.holes==='0000' ? ' (глухая)' : '' %>. Вес данной пластины для теплообменника составляет <%= plate.weight %> кг.
                        ]]>
                    </description>
                    <param name="Вес пластины" unit="кг"><%= plate.weight %></param>
                    <param name="Расположение отверстий"><%= plate.holes %></param>
                    <param name="Толщина металла" unit="мм"><%= plate.thinkness %></param>
                    <param name="Рисунок"><%= plate.pattern %></param>
                    <param name="Марка стали"><%= plate.steel_mark_aisi %></param>
                    <param name="Марка стали(расширенная)"><%= plate.steel_mark %></param>
                    <param name="Типоразмер теплообменника"><%= plate.teploobmennik %></param>
                </offer>
            <% }) %>
        </offers>
    </shop>
